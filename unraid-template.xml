<?xml version="1.0"?>
<Container version="2">
  <Name>MeowNow</Name>
  <Repository>ghcr.io/githumps/meow-now:latest</Repository>
  <Registry>https://ghcr.io/githumps/meow-now</Registry>
  <Network>bridge</Network>
  <MyIP/>
  <Shell>bash</Shell>
  <Privileged>false</Privileged>
  <Support>https://github.com/githumps/meow-now/issues</Support>
  <Project>https://github.com/githumps/meow-now</Project>
  <Overview>Meow Now - A self-hosted cat voicemail system that turns your phone number into an interactive cat-themed experience! Callers can choose between meow mockery (voice-to-meow converter) or talkative cats (AI-powered cat personalities).&#xD;
&#xD;
Features:&#xD;
- Zero per-minute costs (fully self-hosted)&#xD;
- Real-time pitch/rhythm matching for realistic meows&#xD;
- Multiple cat personalities (Grumpy, Wise, Anxious, Diva)&#xD;
- Optional Ollama LLM integration for dynamic responses&#xD;
- Professional IVR system&#xD;
&#xD;
Requirements:&#xD;
- Phone number from NumberBarn or similar SIP provider&#xD;
- Router port forwarding (5060 UDP, 10000-10099 UDP)&#xD;
- Asterisk container (install separately or use docker-compose)</Overview>
  <Category>Tools: Status:Stable</Category>
  <WebUI>http://[IP]:[PORT:5000]</WebUI>
  <TemplateURL>https://raw.githubusercontent.com/githumps/meow-now/main/unraid-template.xml</TemplateURL>
  <Icon>https://raw.githubusercontent.com/githumps/meow-now/main/docs/icon.png</Icon>
  <ExtraParams>--restart=unless-stopped</ExtraParams>
  <PostArgs/>
  <CPUset/>
  <DateInstalled></DateInstalled>
  <DonateText/>
  <DonateLink/>
  <Requires>Asterisk container (see documentation for docker-compose setup)</Requires>
  <Config Name="Web UI Port" Target="5000" Default="5000" Mode="tcp" Description="Web interface for status and configuration" Type="Port" Display="always" Required="true" Mask="false">5000</Config>
  <Config Name="AGI Server Port" Target="4573" Default="4573" Mode="tcp" Description="AGI server for Asterisk integration (internal)" Type="Port" Display="advanced" Required="true" Mask="false">4573</Config>
  <Config Name="Audio Directory" Target="/app/audio" Default="/mnt/user/appdata/meow-now/audio" Mode="rw" Description="Persistent storage for audio files, recordings, and generated meows" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/meow-now/audio</Config>
  <Config Name="Logs Directory" Target="/app/logs" Default="/mnt/user/appdata/meow-now/logs" Mode="rw" Description="Application logs" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/meow-now/logs</Config>
  <Config Name="Models Directory" Target="/app/models" Default="/mnt/user/appdata/meow-now/models" Mode="rw" Description="TTS models (Piper, Coqui)" Type="Path" Display="advanced" Required="false" Mask="false">/mnt/user/appdata/meow-now/models</Config>
  <Config Name="Ollama URL" Target="OLLAMA_URL" Default="" Mode="" Description="Optional: URL to Ollama server for dynamic cat responses (e.g., http://192.168.1.100:11434)" Type="Variable" Display="always" Required="false" Mask="false"></Config>
  <Config Name="TTS Engine" Target="TTS_ENGINE" Default="piper" Mode="" Description="Text-to-Speech engine: piper (recommended) or coqui" Type="Variable" Display="advanced" Required="false" Mask="false">piper</Config>
  <Config Name="Log Level" Target="LOG_LEVEL" Default="INFO" Mode="" Description="Logging level: DEBUG, INFO, WARNING, ERROR" Type="Variable" Display="advanced" Required="false" Mask="false">INFO</Config>
  <Config Name="Enable Grumpy Cat" Target="ENABLE_GRUMPY_CAT" Default="True" Mode="" Description="Enable the Grumpy cat personality" Type="Variable" Display="advanced" Required="false" Mask="false">True</Config>
  <Config Name="Enable Wise Cat" Target="ENABLE_WISE_CAT" Default="True" Mode="" Description="Enable the Wise cat personality" Type="Variable" Display="advanced" Required="false" Mask="false">True</Config>
  <Config Name="Enable Anxious Cat" Target="ENABLE_ANXIOUS_CAT" Default="True" Mode="" Description="Enable the Anxious cat personality" Type="Variable" Display="advanced" Required="false" Mask="false">True</Config>
  <Config Name="Enable Diva Cat" Target="ENABLE_DIVA_CAT" Default="True" Mode="" Description="Enable the Diva cat personality" Type="Variable" Display="advanced" Required="false" Mask="false">True</Config>
  <Config Name="Sample Rate" Target="SAMPLE_RATE" Default="8000" Mode="" Description="Audio sample rate (8000 for telephony)" Type="Variable" Display="advanced" Required="false" Mask="false">8000</Config>
  <Config Name="Max Recording Duration" Target="MAX_RECORDING_DURATION" Default="60" Mode="" Description="Maximum recording duration in seconds for meow mockery" Type="Variable" Display="advanced" Required="false" Mask="false">60</Config>
  <Config Name="Cat Monologue Duration" Target="CAT_MONOLOGUE_DURATION" Default="15" Mode="" Description="Duration of talkative cat monologues in seconds" Type="Variable" Display="advanced" Required="false" Mask="false">15</Config>
</Container>
